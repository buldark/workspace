package array;
import java.util.Scanner;
public class Array_04 {

	public static void main(String[] args) {
	
	boolean lot[] = new boolean[5];
	lot[0]= true;
	lot[1]= false;
	lot[2]= true;
	lot[3]= false;
	lot[4]= false;
	
	Scanner scan = new Scanner(System.in);
	System.out.println("1. 입차  ");
	System.out.println("2. 출차  ");
	System.out.println("3.리스트  ");
	System.out.println("4.종료 ");
	System.out.println("메뉴 :  ");
	
	while(true) {
		int user = scan.nextInt();
		for(int i = 0 ; i<=4 ; i++) {
			boolean  b;
			if(user==1) {System.out.println("위치입력 : " );
			int userlot = scan.nextInt();
				System.out.print(userlot + "위치에 입차");
				if(userlot>0) {
					if(b=true); System.out.println("이미 주차되어있습니다");
					
				}else  System.out.println("주차되어있지 않습니다.");
			
			}else if(user==2) {System.out.println("위치입력 : " );
			int userlot = scan.nextInt();
			System.out.print(userlot + "위치에 출차");
				if(userlot>0) {
				 if(b=false);
				 	System.out.println("이미 주차되어있지 않습니다.");
				
			}		else System.out.println("이미 주차되어있습니다");
				System.out.println();
				
			
			}else if(user==3) 
				System.out.println(lot[i]);
			 
			
				else System.out.println("종료");break;
		}break ;
	
	}}}
	
	




