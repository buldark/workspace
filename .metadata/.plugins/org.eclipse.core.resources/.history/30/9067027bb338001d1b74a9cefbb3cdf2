package array;
import java.util.Scanner;
public class Array_03 {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		System.out.println("배열 크기 입력 : " );
		
		int ar[];
		ar= new int[3];
		for(int i = 0 ; i <= 2; i++) {
			int size = scan.nextInt();
			ar[i]=size;
			System.out.print("ar["+i+"] 입렵 : "+ size);
			System.out.println();
			
			
		}
		}
	}


/*
ar[0] 입력 : 25




화면 25 -50 78


*/