package method;

public class Method_01 {

	public static void main(String[] args) {
		int a= 25, b=36;
		
		
		Method_01 m =new Method_01();//new 생성
		int sum = m.add(25, 36); //호출??

		//int sum = a +b; // 직접 더하지 않고 메소드로 처리 하려면?? 
		int sub = a -b;
		int mul = a *b;
		double div = (double)a /b;
		
		
		System.out.println(a+"+"+b +"="+sum);

	}
	//함수 안에 함수가 들어가면 안됨  그러니깐 새로운 메소드를 void main 안에 넣을 수 없음
	
		public int add(int a/*이 a는 add거 위의 a는 main 거  local variable*/,int b){//구현
			return a +b;
			/*static이 없기에 new 해야함 */}
		
}

